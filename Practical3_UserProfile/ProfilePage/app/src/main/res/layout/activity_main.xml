<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:padding="0sp">

        <!-- Top Background -->
        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_background" />

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_background"
            android:contentDescription="@string/back_button_desc"
            android:src="@drawable/ic_left_arrow24" />

        <!-- Search Button -->
        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="62dp"
            android:background="@drawable/rounded_background"
            android:contentDescription="Search"
            android:src="@drawable/ic_search24" />

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_background"
            android:contentDescription="Settings"
            android:src="@drawable/ic_settings24" />

        <!-- Profile Picture -->
        <!-- Optional: add a circular background -->

        <!-- User Name -->
        <Button
            android:id="@+id/button3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="189dp"
            android:layout_marginEnd="19dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/follow"
            android:textColor="@color/primary"
            android:backgroundTint="@color/reverse_primary"
            android:textAlignment="center"
            android:textSize="15dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/background"
            android:layout_marginStart="25dp"
            android:layout_marginTop="-50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <!-- User Bio -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_picture"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="Tee Qi Jing"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:text="@string/_23004894"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/UserBio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userid"
            android:layout_alignStart="@+id/userid"
            android:layout_marginStart="0dp"
            android:layout_marginTop="16dp"
            android:text="2nd Year AI Student, University of Malaya" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/UserBio1"
            android:layout_alignStart="@+id/UserBio1"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-1dp"
            android:text="@string/follow_my_instagram_teeqijing" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_alignStart="@+id/date"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:text="@string/_2_024_following"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView8"
            android:layout_marginStart="13dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textView8"
            android:text="@string/_1_4m_followers"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_centerInParent="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="3dp"
            android:drawableLeft="@drawable/ic_address16"
            android:text=" Muar, Johor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_centerInParent="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="19dp"
            android:drawableLeft="@drawable/ic_calendar16"
            android:text=" Joined Oct 2023"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="385dp"
            android:layout_height="36dp"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/text_lines"
                android:gravity="center"
                android:text="Posts"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="@color/reverse_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Projects"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Media"
                android:textAlignment="center"
                android:textSize="15sp"

                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Likes"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-1dp"
            android:background="?android:attr/listDivider" />

        <RelativeLayout
            android:background="@color/secondary"
            android:layout_width="match_parent"
            android:layout_height="3000dp"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/extra_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:text="Extra Content 1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/extra_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Extra Content 2"
                android:layout_below="@+id/extra_text1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/extra_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Extra Content 3"
                android:layout_below="@+id/extra_text2"

                android:textSize="18sp" />

            <TextView
                android:id="@+id/extra_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Extra Content 4"
                android:layout_below="@+id/extra_text3"

                android:textSize="18sp" />

            <TextView
                android:id="@+id/extra_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Extra Content 5"
                android:layout_below="@+id/extra_text4"

                android:textSize="18sp" />

            <TextView
                android:id="@+id/extra_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Extra Content 6"
                android:layout_below="@+id/extra_text5"

                android:textSize="18sp" />

            <TextView
                android:id="@+id/extra_text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Extra Content 7"
                android:layout_below="@+id/extra_text6"

                android:textSize="18sp" />

            <TextView
                android:id="@+id/extra_text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Extra Content 8"
                android:layout_below="@+id/extra_text7"

                android:textSize="18sp" />
        </RelativeLayout>


    </RelativeLayout>


</ScrollView>